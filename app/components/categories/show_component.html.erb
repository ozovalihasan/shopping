<%= @category.name %>

<div>
  Subcategories
</div>
<div class="flex flex-wrap justify-evenly">
  <%= render(Categories::CategoryComponent.with_collection(@category.subcategories)) %>
</div>

<div class="bg-blue-100">
  <%= render Products::IndexComponent.new(products: @category.subcategories.products) %>
</div>

<div>
  <%= link_to "Edit this category", edit_category_path(@category) %> |
  <%= link_to "Back to categories", categories_path %>

  <%= button_to "Destroy this category", @category, method: :delete %>
</div>
