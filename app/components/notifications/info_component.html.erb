<div 
  data-controller="alert" 
  data-alert-dismiss-after-value="3000" 
  data-alert-show-class="translate-x-0 opacity-100" 
  data-alert-hide-class="translate-x-full opacity-0" 
  
>
  <div class="max-w-sm w-full shadow-lg px-4 py-3 rounded relative bg-first-400 border-l-4 border-first-700 text-second pointer-events-auto">
    <div class="p-2">
      <div class="flex items-start">
        <div class="ml-3 w-full flex-1 pt-0.5">
          <p class="text-sm leading-5 font-medium">
            <%= @info %>
          </p>
        </div>
        <div class="ml-4 flex-shrink-0 flex">
          <button data-action="alert#close" class="inline-flex text-second focus:outline-none focus:text-gray-300 transition ease-in-out duration-150">
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>