<%= form_with(model: @product) do |form| %>
  <% if @product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <div>
    <%= form.label :color, style: "display: block" %>
    <%= form.text_field :color %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :review_count, style: "display: block" %>
    <%= form.number_field :review_count %>
  </div>

  <div>
    <%= form.label :total_review_score, style: "display: block" %>
    <%= form.number_field :total_review_score %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>


  <div>
    <%= form.label :category_id %>
    <%= form.select :category_id, options_from_collection_for_select(@categories, "id", "name", selected: @product.category&.id)  %>
  </div>

  <div>
    <%= form.label :seller_id %>
    <%= form.select :seller_id, options_from_collection_for_select(@sellers, "id", "email")  %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
