<div data-controller="tabs" data-tabs-active-tab="-mb-px border-l border-t border-r rounded-t bg-first-400">
  <ul class="flex border-b">
    <li class="-mb-px mr-1" data-tabs-target="tab" data-action="click->scroll#scrollNow click->tabs#change">
      <a class="bg-second inline-block py-2 px-4 text-blue-600 hover:text-blue-700 font-semibold no-underline" href="#">Description</a>
    </li>
    
    <li class="-mb-px mr-1" data-tabs-target="tab" data-action="click->scroll#scrollNow click->tabs#change">
      <a class="bg-second inline-block py-2 px-4 text-blue-600 hover:text-blue-700 font-semibold no-underline" href="#">Questions</a>
    </li>
    
    <li class="-mb-px mr-1" data-tabs-target="tab" data-action="click->scroll#scrollNow click->tabs#change">
      <a class="bg-second inline-block py-2 px-4 text-blue-600 hover:text-blue-700 font-semibold no-underline" href="#">Reviews(<%= @product.review_count %>)</a>
    </li>

  </ul>

  <div class="hidden py-4 px-4 border-l border-b border-r" data-tabs-target="panel">
    <%= @product.description %>
  </div>
      
  <div class="hidden py-4 px-4 border-l border-b border-r" data-tabs-target="panel">
    <%= turbo_frame_tag product_questions_target(@product), src: product_questions_path(@product), loading: "lazy" do %>
      <%= render component("icons/spinner") %>
    <% end %>
  </div>

  <div class="hidden py-4 px-4 border-l border-b border-r" data-tabs-target="panel">
    <%= turbo_frame_tag product_reviews_target(@product), src: product_reviews_path(@product), loading: "lazy" do %>
      <%= render component("icons/spinner") %>
    <% end %>
  </div>

</div>