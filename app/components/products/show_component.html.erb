<div class="w-32 h-32 bg-second-500">
  Placeholder image
</div>
<div>
  name: <%= @product.name %>
</div>
<div>
  color: <%= @product.color %>
</div>
<div>
  description: <%= @product.description %>
</div>
<div>
  quantity: <%= @product.quantity %>
</div>
<div>
  price: <%= @product.price %>
</div>
<div>
  review_count: <%= @product.review_count %>
</div>
<div>
  total_review_score: <%= @product.total_review_score %>
</div>

<%= render Reviews::IndexComponent.new(reviews: @product.reviews) %>

<%= render Questions::IndexComponent.new(questions: @product.questions) %>

<div>
  <%= link_to "Edit this product", edit_product_path(@product) %> |
  <%= link_to "Back to products", products_path %>

  <%= button_to "Destroy this product", @product, method: :delete %>
</div>
