<%= turbo_frame_tag all_categories_map_target, class: "aspect-square flex" do %>
  <% @main_categories.each do |main_category| %>
    <div>
      <div>
        <%= link_to main_category.name, main_category_path(main_category), data: {"turbo-frame"=> main_parts_target}, class: "bold underline" %>
      
        <% main_category.categories.each do |category| %>
          <div>
            <%= link_to category.name, category_path(category), data: {"turbo-frame"=> main_parts_target}, class: "" %>
            
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
