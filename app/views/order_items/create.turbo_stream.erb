<turbo-stream action="append" target="notifications">
  <template>
    <%= render component("notifications/info", info: "#{@order_item.product.name} is added to your cart.") %>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="cart">
  <template>
    <%= render component("carts/navbar", cart: @cart) %>
  </template>
</turbo-stream>