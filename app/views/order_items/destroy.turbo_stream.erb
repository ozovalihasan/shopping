<%= turbo_stream.remove dom_id(@order_item) %>

<% unless @order_item.order.order_items.exists? %>
  <%= turbo_stream.append "order-items-list" do %>
    <%= render OrderItems::EmptyComponent.new %>  
  <% end %>
<% end %>

<%= turbo_stream.append "notifications" do %>
  <%= render Notifications::InfoComponent.new(info: @notice) %>
<% end %>

<%= turbo_stream.replace "cart" do %>
    <%= render Carts::NavbarComponent.new(cart: @cart) %>
<% end %>