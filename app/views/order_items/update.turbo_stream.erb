<%= turbo_stream.update "#{ dom_id(@order_item) }-intermediate-total" do %>
  <%= number_to_currency(@order_item.product.price * @order_item.quantity)  %>
<% end %>

<%= turbo_stream.append "notifications" do %>
  <%= render component("notifications/info", info: @notice) %>
<% end %>

<%= turbo_stream.replace "cart" do %>
  <%= render component("carts/navbar", cart: @cart) %>
<% end %>

<%= turbo_stream.update "#{dom_id(@order_item.order)}-total" do %>
  <%= number_to_currency @order_item.order.total_price %>
<% end %>