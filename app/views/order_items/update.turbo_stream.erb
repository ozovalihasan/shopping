<turbo-stream action="update" target=<%= "#{ dom_id(@order_item) }-intermediate-total" %>>
  <template>
    <%= @order_item.product.price * @order_item.quantity %>
  </template>
</turbo-stream>


<turbo-stream action="append" target="notifications">
  <template>
    <%= render Notifications::InfoComponent.new(info: @notice) %>
  </template>
</turbo-stream>

<%= turbo_stream.replace "cart" do %>
    <%= render Carts::NavbarComponent.new(cart: @cart) %>
<% end %>